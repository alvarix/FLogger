{
    "allowJs": true,
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/composables/*": [
                "src/composables/*"
            ],
            "@/modules/*": [
                "src/modules/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@composables/*": [
                "src/composables/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
        },
        "target": "esnext",
        "module": "esnext",
        "lib": ["ES2023", "dom"],
        "moduleResolution": "bundler",
        "importHelpers": true,
        "isolatedModules": true,
        "noEmit": true,
        "allowJs": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
    },
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "eslint.config.mjs",
        "index.html",
        "src/**/*",
        "src/**/*.vue",
        "public/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "public/dropbox-examples",
    ]
}