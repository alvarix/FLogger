{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
        },
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "noEmit": true,
        "allowJs": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
    },
    "include": [
        "index.html",
        "src/**/*",
        "public/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "public/dropbox-examples",
    ]
}